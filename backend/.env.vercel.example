# Vercel Environment Variables
# Copy these to your Vercel dashboard: Project Settings > Environment Variables

NODE_ENV=production
PORT=3000

# Database - Use Railway, Render, or Supabase
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT
JWT_SECRET=your_very_secure_random_secret_here_change_this
JWT_EXPIRES_IN=7d

# Frontend URL (your Vercel domain)
FRONTEND_URL=https://yourdomain.vercel.app

# CORS
ALLOWED_ORIGINS=https://yourdomain.vercel.app

# File Storage - Use S3, Cloudinary, or similar
# Do NOT use local filesystem on Vercel!
STORAGE_TYPE=cloudinary
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Payment
RAZORPAY_KEY_ID=rzp_live_xxxxx
RAZORPAY_KEY_SECRET=your_secret_key

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Puppeteer - Use browserless.io for serverless PDF generation
BROWSERLESS_TOKEN=your_browserless_token
BROWSERLESS_URL=https://chrome.browserless.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
